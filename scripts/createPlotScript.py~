def writeAnimatedPlot(filename, size):
	with open(filename) as f:
		f.write("set terminal gif animate delay 1\n")
		f.write("set output 'out.gif'\n")
		f.write("stats 'data.txt' nooutput\n)
		f.write("set yrange [-1:1]\n")
		f.write("do for [i=1:int(" + str(size) + ")] {\n")
		f.write("\tplot "data.txt" index (i) with lines, \"data.txt\" index(0) with lines\n")
		f.write("}")
